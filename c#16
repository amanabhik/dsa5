using System;
using System.Collections;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace BOOK_STORE_APPLICATION
{
    public partial class Form1 : Form
    {
        private ArrayList ISBN = new ArrayList();
        private ArrayList title = new ArrayList();
        private ArrayList qty = new ArrayList();
        private ArrayList author = new ArrayList();


        public Form1()
        {
            InitializeComponent();
        }

        private void label2_Click(object sender, EventArgs e)
        {

        }

        private void label4_Click(object sender, EventArgs e)
        {

        }

        private void button3_Click(object sender, EventArgs e)
        {
            if (ISBN.Contains(textBox1.Text))
            {
                int index = ISBN.IndexOf(textBox1.Text);
                title[index] = textBox2.Text;
                author[index] = textBox3.Text;
                qty[index] = textBox5.Text;

                MessageBox.Show("Book information has been updated successfully");
            }
            else
            {
                MessageBox.Show("ISBN of the book not found");
            }


        }

        private void button1_Click(object sender, EventArgs e)
        {
            ISBN.Add(textBox1.Text);
            title.Add(textBox2.Text);
            author.Add(textBox3.Text);
            qty.Add(textBox5.Text);
            MessageBox.Show("BOOK INFORMATION ADDED SUCCESSFULLY");
        }

        private void button2_Click(object sender, EventArgs e)
        {
            listView1.Items.Clear();

            for (int i = 0; i < ISBN.Count; i++)
            {
                ListViewItem item = new ListViewItem(new string[] { ISBN[i].ToString(), title[i].ToString(), author[i].ToString(), qty[i].ToString() });
               
                listView1.Items.Add(item);

            }

        }
    }
}
