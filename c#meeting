using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Globalization;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace MEETING_SCHEDULER
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void button1_Click(object sender, EventArgs e)
        {
            string selectedDate = monthCalendar1.SelectionStart.ToString("dd:MM:yyyy");
            string start = dateTimePicker1.Value.ToString("HH:mm:ss");
            string end = dateTimePicker2.Value.ToString("HH:mm:ss");
            bool conflict = false;
            foreach(ListViewItem item in listView1.Items)
            {
                DateTime itemStart = DateTime.ParseExact(item.SubItems[1].Text, "HH:mm:ss", CultureInfo.InvariantCulture);
                DateTime itemEnd = DateTime.ParseExact(item.SubItems[2].Text, "HH:mm:ss", CultureInfo.InvariantCulture);
                DateTime startTime = DateTime.ParseExact(start, "HH:mm:ss", CultureInfo.InvariantCulture);
                DateTime endTime = DateTime.ParseExact(end, "HH:mm:ss", CultureInfo.InvariantCulture);

                string str = item.SubItems[0].Text.ToString();
                if (selectedDate.Equals(str))
                {
                    if ((startTime >= itemStart && startTime <= itemEnd) ||
                   (endTime >= itemStart && endTime <= itemEnd) ||
                   (startTime <= itemStart && endTime >= itemEnd))
                    {
                        conflict = true;
                        break;


                    }
                }





            }
                if (conflict)
                {
                    MessageBox.Show("The new meeting conflicts with a previously scheduled meeting. " +
                        "Please select a different time.", "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
                    return;
                }
            ListViewItem items = new ListViewItem(selectedDate);
            items.SubItems.Add(start);
            items.SubItems.Add(end);
            listView1.Items.Add(items);
        }

        private void listView1_SelectedIndexChanged(object sender, EventArgs e)
        {

        }
    }
}
