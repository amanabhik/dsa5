namespace MultipleDocumentInterface
{
    public partial class Form1 : Form
    {
        static int counter;
        public Form1()
        {
            InitializeComponent();
        }

        private void openToolStripMenuItem_Click(object sender, EventArgs e)
        {
            if (openFileDialog1.ShowDialog() == DialogResult.OK)
            {
                MyForm myForm = new MyForm(openFileDialog1.FileName);
                counter++;
                myForm.Text = "Document"+counter; //openFileDialog1.FileName
                myForm.richTextBox1.Text = File.ReadAllText(openFileDialog1.FileName);
                myForm.MdiParent = this;
                myForm.Show();
            }
        }

        private void closeToolStripMenuItem_Click(object sender, EventArgs e)
        {
            if (this.ActiveMdiChild is MyForm activeChild)
            {
                if (saveFileDialog1.ShowDialog() == DialogResult.OK)
                {
                    File.WriteAllText(saveFileDialog1.FileName, activeChild.richTextBox1.Text);
                }
            }
        }

        private void saveToolStripMenuItem_Click(object sender, EventArgs e)
        {
            Application.Exit();
        }
    }
}
